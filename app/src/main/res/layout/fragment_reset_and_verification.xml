<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/move">

    <TextView
        android:id="@+id/fragment_rest_tv_email_or_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/fragment_rest_et_email_or_code"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/d80"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_30sp" />

    <EditText
        android:id="@+id/fragment_rest_et_email_or_code"
        style="@style/text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/fragment_rest_btn_ok"
        style="@style/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_rest_et_email_or_code"
        android:layout_centerHorizontal="true"
        android:text="@string/ok" />

</RelativeLayout>